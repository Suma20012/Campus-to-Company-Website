{
  "name": "campus-to-company-website",
  "version": "1.0.0",
  "description": "Transform Your Career Journey - Campus to Company Educational Platform",
  "main": "assets/js/main.js",
  "scripts": {
    "start": "live-server --port=3000 --open=/",
    "dev": "live-server --port=3000 --watch=assets/ --open=/",
    "build": "npm run build:css && npm run build:js && npm run optimize:images",
    "build:css": "postcss assets/css/*.css --dir build/css --use autoprefixer cssnano",
    "build:js": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "serve": "http-server -p 8080 -c-1",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "validate": "npm run lint && npm run format",
    "optimize:images": "imagemin assets/images/* --out-dir=build/images --plugin=imagemin-webp --plugin=imagemin-optipng --plugin=imagemin-jpeg-recompress",
    "test": "jest",
    "test:watch": "jest --watch",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=reports/lighthouse.html",
    "analyze": "webpack-bundle-analyzer build/js/main.js",
    "clean": "rimraf build/",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=./",
    "deploy:vercel": "vercel --prod",
    "preview": "npm run build && npm run serve"
  },
  "keywords": [
    "education",
    "career",
    "courses",
    "learning",
    "campus",
    "corporate",
    "skills",
    "training",
    "professional-development"
  ],
  "author": {
    "name": "Campus to Company",
    "email": "contact@campustocompany.com",
    "url": "https://campustocompany.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/campus-to-company/website.git"
  },
  "bugs": {
    "url": "https://github.com/campus-to-company/website/issues"
  },
  "homepage": "https://campustocompany.com",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "aos": "^2.3.4",
    "particles.js": "^2.0.0",
    "typed.js": "^2.0.16",
    "swiper": "^11.0.5",
    "vanilla-lazyload": "^17.8.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "html-webpack-plugin": "^5.6.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-jpeg-recompress": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "netlify-cli": "^17.10.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "vercel": "^32.7.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/vendor/**",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "particlesJS": "readonly",
      "AOS": "readonly",
      "Typed": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {
        "preset": "default"
      }
    }
  }
}